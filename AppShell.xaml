<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ODEV.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ODEV"
    Shell.FlyoutBehavior="Flyout"
    Title="ODEV">

    <ShellContent
        Title="ANA SAYIFA"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Icon="home.png"/>
    <ShellContent
        Title="Kredi Hesaplama"
        ContentTemplate="{DataTemplate local:KrediHesaplama}"
        Route="KrediHesaplama"
        Icon="bank.png"/>
   
    <ShellContent
        
        Title="Vucut Kitle Indexi"
        ContentTemplate="{DataTemplate local:VucutKitleIndexi}"
        Route="VucutKitleIndexi"
        Icon="health.png"/>
    
    <ShellContent
        Title="Renk Seçici"
        ContentTemplate="{DataTemplate local:ColorPicker}"
        Route="ColorPicker"
        Icon="color.png"/>
    
    <ShellContent
        Title="Yaplıacaklar"
        ContentTemplate="{DataTemplate local:ToDoList}"
        Route="ToDoList" 
        Icon="list.png"/>


</Shell>
